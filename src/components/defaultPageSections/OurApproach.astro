---
interface Props {
  headline: string;
  summary: string;
  approaches: Approach[];
}

export interface Approach {
  embedURL: string;
  embedID: string;
  desc: string;
  videothumbnail: string;
}

const props = Astro.props;
---

<div class="bg-gradient-to-b from-[#071633] via-[#0b2a40] to-[#071633] text-white py-10">
  
  <div id="unique" class="container">
    <p class="section-headline mb-10 text-white">{props.headline}</p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-12">
      {
        props.approaches.map((approach, index) => {
          return (
            <div class="md:block items-start">
              {/* Video with glass border effect */}
              <div class="rounded-xl overflow-hidden shadow-2xl border border-white/10 mb-4">
                <iframe 
                  src={approach.embedURL} 
                  title="Treatment Video" 
                  id={approach.embedID} 
                  class="w-full aspect-video" 
                  allowfullscreen
                />
              </div>
              
              {/* Description text */}
              <p class="pl-3 md:pl-0 text-sm md:text-base leading-tight mt-6 font-bold text-white">
                {approach.desc}
              </p>
            </div>
          );
        })
      }
    </div>
  </div>
  
</div>

<style>
  /* Ensure section headline is visible on dark background */
  .section-headline {
    color: white !important;
  }
  
  /* Optional: Add subtle animation to video containers on hover */
  iframe {
    transition: transform 0.3s ease;
  }
  
  iframe:hover {
    transform: scale(1.02);
  }
</style>
